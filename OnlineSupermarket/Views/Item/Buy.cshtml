<div>
    <form asp-action="Buy">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="QuantityToBuy" class="control-label"> Enter the quantity to buy: </label>
            <input asp-for="QuantityToBuy" class="form-control" />
            <span asp-validation-for="QuantityToBuy" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Buy" class="btn btn-default" />
        </div>
    </form>
        <a asp-controller="Home" asp-action="Index">Back to Main Shopping</a>
